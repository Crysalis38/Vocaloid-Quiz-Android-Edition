<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quiz_select_rl"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_select_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Quiz_Select" >

    <HorizontalScrollView
        android:id="@+id/quiz_select_horiscroll"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:background="@drawable/quiz_select_bg"
        android:measureAllChildren="true"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:id="@+id/quiz_select_hori_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal|fill_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:showDividers="none"
            android:weightSum="1" >

            <ImageButton
                android:id="@+id/quiz_select_miku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Fulltrans"
                android:contentDescription="@string/cont_miku_select"
                android:src="@drawable/miku_select" />

            <ImageButton
                android:id="@+id/ImageButton01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Fulltrans"
                android:contentDescription="@string/cont_miku_select"
                android:src="@drawable/miku_select" />

            <ImageButton
                android:id="@+id/ImageButton02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Fulltrans"
                android:contentDescription="@string/cont_miku_select"
                android:src="@drawable/miku_select" />
        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
